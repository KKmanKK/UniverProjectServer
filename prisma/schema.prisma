// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  passord String
  lesson  Lesson[]
}

model Lesson {
  id       Int    @id @default(autoincrement())
  text     String
  speed    Int?
  accuracy Int?
  time     Int?
  User     User?  @relation(fields: [userId], references: [id])
  userId   Int?
}
